# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cs text diff=csharp
*.xaml text
*.xml text
*.json text
*.js text
*.ts text
*.html text
*.css text
*.scss text
*.md text
*.txt text
*.yml text
*.yaml text

# Scripts
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf
*.sh text eol=lf

# Configuration files
*.config text
*.props text
*.targets text
*.resx text
*.settings text

# Documentation
*.md text
*.txt text
LICENSE text
README text

# Binary files (images, icons, etc.)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Compiled files
*.dll binary
*.exe binary
*.pdb binary
*.lib binary
*.obj binary

# Package files
*.nupkg binary
*.snupkg binary
*.msi binary
*.cab binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.wav binary
*.avi binary
*.mov binary

# Office documents
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary
*.pdf binary

# Git LFS tracking
*.ico filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.msi filter=lfs diff=lfs merge=lfs -text
*.nupkg filter=lfs diff=lfs merge=lfs -text
*.snupkg filter=lfs diff=lfs merge=lfs -text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
docs/ export-ignore
